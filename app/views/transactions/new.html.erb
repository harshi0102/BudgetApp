<div class="container new-category">
    <div class="header blue">
      <div class="transaction-title">  
        <a href="<%= category_transactions_path(category_id: @category.id) %>">
          <%= image_tag("arrow.png", class: "back") %>
        </a>
        <h1 class="main-title login-title">ADD TRANSACTION</h1>
        <%= image_tag("search.png", class: "back") %>
      </div>  
    </div>

  <% if flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_with model: [@category, @transaction], url: category_transactions_path(@category) do |form| %>
    <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>
      <ul>
        <% @transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= form.text_field :name, required: true, class: "input", placeholder: "Name"  %>
    </div>

    <div class="field">
      <%= form.number_field :amount, required: true, class: "input", placeholder: "Amount" %>
    </div>

    <div class="new-button-container">
      <%= form.submit "Save", class: "new-button green" %>
    </div>
  <% end %>
</div>