<%= stylesheet_link_tag 'registration' %>
<nav class="register">
  <%= link_to budget_path, class: 'arrow-link' do %>
    <i class="fa fa-solid fa-arrow-left"></i>
  <% end %>
  <h2>REGISTER</h2>
</nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "registration"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='picture-field'>
    <% if resource.image.attached? %>
      <%= image_tag(resource.image, class: 'profile-pic')%>
    <% else %>
      <%= image_tag("/assets/default_profile.png", class: 'profile-pic')%>
    <% end %>
    <label>
      Upload picture
      <span style="display:none;">
        <%= f.file_field :image %>
      </span>
    </label>
  </div>
  
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full Name' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation' %>
  </div>

  <div class="actions">
    <%= f.submit "Next", class: 'submit' %>
  </div>
<% end %>